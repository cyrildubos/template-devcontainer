{
    "name": "Arch Linux",
    "image": "archlinux",
    "containerEnv": {
        "DISPLAY": ":1"     // X11 forwarding
    },
    "mounts": [ 
        // X11 forwarding
        {
            "source": "/tmp/.X11-unix",
            "target": "/tmp/.X11-unix",
            "type": "bind"
        },
        // USB passthrough
        {
            "source": "/dev/bus/usb",
            "target": "/dev/bus/usb",
            "type": "bind"
        }
    ],
    "runArgs": [
        "--privileged",     // USB passthrough
        "--gpus=all"        // NVIDIA Container Toolkit
    ]
}
