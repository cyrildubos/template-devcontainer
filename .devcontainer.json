{
    "name": "Arch Linux",
    "image": "archlinux",
    "containerEnv": {
        "DISPLAY": ":1"
    },
    "mounts": [
        "type=bind,source=/dev/bus/usb,target=/dev/bus/usb",
        "type=bind,source=/tmp/.X11-unix,target=/tmp/.X11-unix"
    ],
    "runArgs": [
        "--gpus=all",
        "--device=/dev/dri:/dev/dri",
        "--privileged"
    ]
}
